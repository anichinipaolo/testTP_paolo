{% extends 'base.html.twig' %}

{% block title %}Comment page{% endblock %}

{% block body %}
<body>



<div class="container">
    {{ form_start(form) }}

    <div class="error-message">
        {{ form_errors(form) }}
    </div>

    {{ form_row(form.fname, {'attr': {'placeholder': 'Your Name'}}) }}
    {{ form_row(form.lname, {'attr': {'placeholder': 'Your Email'}}) }}
    {{ form_row(form.comment, {'attr': {'placeholder': 'Your Message'}}) }}

   

    {{ form_end(form) }}
</div>

</body>
{% endblock %}
