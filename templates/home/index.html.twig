{% extends "base.html.twig" %}

{% block body %}
	<style>
		body {
			;
			/* padding-top: 56px; */
		}
		.carousel-item {
			height: 50vh;
			min-height: 300px;
			background: no-repeat center center scroll;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
		}
		.carousel-caption {
			bottom: 20%;
		}
		.services {
			padding: 80px 0;
			background-color: #f8f9fa;
		}
	</style>
	<body>


		<!-- Hero Section with Carousel -->
		<header id="home">
			<div id="carouselExample" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active" style="background-image: url('https://via.placeholder.com/1600x500');">
						<div class="carousel-caption d-none d-md-block">
							<h1 class="display-4">Your Trusted Auto Care Partner</h1>
							<p class="lead">Quality service you can rely on</p>
						</div>
					</div>
					<!-- Add more carousel items as needed -->
				</div>
			</div>
		</header>

		<!-- Services Section -->
		<section id="services" class="services">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-center">
						<h2 class="section-heading text-uppercase">Nos Services</h2>
						<p class="text-muted">Découvrez la gamme complète de services d'entretien automobile que nous proposons pour maintenir votre véhicule en parfait état.</p>
					</div>

					<div class="row">
					{% for service in services %}

						
<div class="col-lg-4">
							<h4 class="service-title">{{ service.sname }}</h4>
							<p class="text-muted">{{ service.sdescription }}</p>

					</div>
					{% else %}
						No services have been found.
					{% endfor %}
						


				</div>
			</section>

			<section>
				<div class="container">
					<h1>Comments</h1>
					{% for comment in comments %}

						{% if comment.active == 1 %}


							<h3>{{ comment.fname }}</h3>
							<p>{{ comment.comment }}</p>
							<p>{{ comment.note }}</p>


						{% endif %}


					{% else %}
						No comments have been found.
					{% endfor %}
				</div>
			</section>


			<!-- Bootstrap JS and dependencies -->
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

		</body>


	{% endblock %}

